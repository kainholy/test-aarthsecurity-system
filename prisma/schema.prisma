datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Employee {
  id                          Int      @id @default(autoincrement())
  employee_number             String   @unique
  name                        String
  name_en                     String
  address                     String
  phone                       String
  birth_date                  DateTime
  email                       String
  employment_type             String
  employment_start_date       DateTime
  emergency_contact_relationship String
  emergency_contact_phone     String
  qualifications              String
}

model Company {
  id              Int       @id @default(autoincrement())
  name            String
  address         String
  phone           String
  email           String

  projects        Project[]
}

model Project {
  id              Int       @id @default(autoincrement())
  name            String
  qualifications     String
  qualificationsPersonCount Int
  needMember      Int
  type            String
  price           String
  date            DateTime
  startDate       DateTime
  endDate         DateTime
  staff           String
  staffPhone      String
  note            String
  companyId       Int

  // Companyモデルとの関連
  company         Company   @relation(fields: [companyId], references: [id])
}